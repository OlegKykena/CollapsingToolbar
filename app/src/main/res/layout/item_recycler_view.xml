<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginTop="6dp"
                                   app:cardElevation="1dp"
                                   app:cardCornerRadius="4dp"
                                   android:background="@android:color/white">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/name"
                  android:text="asdasd"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/address"
                  android:layout_marginTop="4dp" android:text="qweqwed"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>